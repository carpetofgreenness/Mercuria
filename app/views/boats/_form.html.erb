<% if @boat.errors.full_messages.any? %>
  <ul>
    <% @boat.errors.full_messages.each do | error_message| %>
      <li><%= error_message %></li>
      <br />
    <% end %>
  </ul>
<% end %>
<% if current_user %>
  <%= form_for @boat do |f| %>

    <div class="field">
      <%= f.label :name, "Name (must be unique)" %><br />
      <%= f.text_field :name %>
    </div>

    <div class="field">
      <%= f.label :location %><br />
      <%= f.select(:location, options_for_select(Locations::LOCATIONS), :prompt => "Select location") %>
      <!-- locations live in app>models>locations.rb -->
    </div>

    <div class="field">
      <%= f.label :container_num, "Number of Containers" %><br />
      <%= f.number_field :container_num %> <br><br>
    </div>

    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>

<% end %>
