
<% @users.each do |user| %>
	
	<div class= "container singleuser">
		<div class= "row">
			
			<div class= "col-md-4">
				<h3>
					<strong>
						User:
					</strong>
						<%= user.full_name %>
				</h3>
			</div>
			<div class="col-md-4">
				<h3>
					<strong>
						Company:
					</strong>
						<%= user.company %>
				</h3>
			</div>


		</div>
		<div class="row">
			<% @jobs = user.jobs %>
			<%= render partial: "job_card", locals: {jobs: @jobs} %>

		</div>
			
		
		<div class= "row">
		</div>
	</div>
	<br>
<%end%>

