<div class="container">
<br>
	<% @jobs.each do |j| %>
		<div class="singlejobs container">
			<div class="row jobstuff">
				<div class="col-md-4">
					<p><strong>Job: </strong> <%=j.name%></p>
					<p><strong>User:</strong> <%=j.user.first_name%> <%= j.user.last_name%></p>
					<p><strong>Boat:</strong>
						<%j.boats.each do |b|%>
							<%=b.name%>
						<%end%>
					</p>
					
				</div>
				<div class="col-md-4">
					<p><strong>From:</strong> <%= j.origin %></p>
					<p><strong>To:</strong> <%=j.destination %></p>

				</div>
				<div class="col-md-3">
					<p><strong>Cost:</strong> $<%= j.cost %></p>
					<p><strong>Containers Needed:</strong> <%=
					j.containers %></p>
				</div>
				<div class="col-md-1">
					<p><%= link_to "(edit)", edit_job_path(j.id) %></p>
				</div>
			</div>
			<div class="row descriptarea">
				<p><strong>Description:</strong> <%=j.description %></p>
			</div>
		</div>
		
	<% end %>
</div>



